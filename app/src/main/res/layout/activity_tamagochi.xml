<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#f0fad7"
    android:layout_height="match_parent"
    tools:context=".Start2">


    <TextView
        android:id="@+id/textView5"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginStart="12dp"
        android:fontFamily="@font/fontone"
        android:text="Счастье"
        android:textColor="@color/Green"
        android:textSize="20dp"
        android:gravity="center_horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />




    <ProgressBar
        android:id="@+id/vertical_progressbar1"
        style="@style/Widget.ProgressBar.Vertical"
        android:layout_width="25dp"
        android:layout_height="120dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="336dp"
        android:max="100"
        android:min="0"
        android:progress="100"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/health"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="42dp"
        android:autoSizeMaxTextSize="25dp"
        android:autoSizeMinTextSize="12dp"
        android:autoSizeStepGranularity="2dp"
        android:autoSizeTextType="uniform"
        android:fontFamily="@font/fontone"
        android:gravity="center_horizontal"
        android:text="100"
        android:textColor="@color/Green"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vertical_progressbar1" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/fontone"
        android:gravity="center_horizontal"
        android:text="Еда"
        android:textColor="@color/Green"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/vertical_progressbar2"
        style="@style/Widget.ProgressBar.Vertical2"
        android:layout_width="25dp"
        android:layout_height="120dp"
        android:layout_marginTop="28dp"
        android:max="100"
        android:progress="100"
        app:layout_constraintEnd_toStartOf="@+id/vertical_progressbar3"
        app:layout_constraintStart_toEndOf="@+id/vertical_progressbar1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/eat"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="146dp"
        android:autoSizeMaxTextSize="25dp"
        android:autoSizeMinTextSize="10dp"
        android:autoSizeStepGranularity="2dp"
        android:autoSizeTextType="uniform"
        android:fontFamily="@font/fontone"
        android:gravity="center_horizontal"
        android:text="100"
        android:textColor="@color/Green"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vertical_progressbar2" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginStart="12dp"
        android:fontFamily="@font/fontone"
        android:gravity="center_horizontal"
        android:text="Сон"
        android:textColor="@color/Green"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/vertical_progressbar3"
        style="@style/Widget.ProgressBar.Vertical3"
        android:layout_width="25dp"
        android:layout_height="120dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="128dp"
        android:max="100"
        android:min="0"
        android:progress="100"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/happyness"
        android:layout_width="40dp"
        android:layout_height="40dp"

        android:layout_marginStart="250dp"
        android:layout_marginTop="0dp"
        android:autoSizeMaxTextSize="25dp"
        android:autoSizeMinTextSize="10dp"
        android:autoSizeStepGranularity="2dp"
        android:autoSizeTextType="uniform"
        android:fontFamily="@font/fontone"
        android:gravity="center_horizontal"
        android:text="100"
        android:textColor="@color/Green"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vertical_progressbar3" />

    <ImageButton

            android:id="@+id/tools_icon"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:backgroundTint="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/home"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/test"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginEnd="88dp"
        android:layout_marginBottom="512dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <TextView
        android:id="@+id/test2"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginEnd="96dp"
        android:layout_marginBottom="448dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/karambola"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="148dp"
        android:background="@drawable/happy"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/karambolaIm"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="148dp"
        android:background="@drawable/happy"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/yellow"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="308dp"
        android:layout_marginBottom="108dp"
        android:src="@drawable/dish"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/bowl"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="288dp"
        android:layout_marginBottom="36dp"
        android:src="@drawable/bowl2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>